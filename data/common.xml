    <!-- Misc. video restrictions -->
    <restriction id="15fps" type="video">
      <field name="framerate" type="fraction">
        <range min="0/1" max="15/1" />
      </field>
    </restriction>

    <restriction id="30fps" type="video">
      <field name="framerate" type="fraction">
        <range min="0/1" max="30/1" />
      </field>
    </restriction>
  </restrictions>
</dlna-profiles>
